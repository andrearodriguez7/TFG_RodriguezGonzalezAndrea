<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#7B9B68">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="24dp">

        <!-- Flecha de volver -->
        <ImageView
            android:id="@+id/backButton"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_gravity="start"
            android:src="@drawable/volver"
            android:contentDescription="Volver"
            android:layout_marginBottom="16dp"/>

        <!-- Título -->
        <TextView
            android:id="@+id/tvRescatame"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="RESCÁTAME"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_marginBottom="32dp"/>

        <!-- Imagen -->
        <ImageView
            android:id="@+id/ivAsociacion"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:contentDescription="Foto de la Asociación"
            android:layout_marginBottom="32dp"
            android:layout_gravity="center"/>

        <!-- Datos -->
        <TextView
            android:id="@+id/tvNombreAsociacion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Asociación:"
            android:textSize="18sp"
            android:layout_marginBottom="12dp"/>

        <TextView
            android:id="@+id/tvCorreoAsociacion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Correo:"
            android:textSize="18sp"
            android:layout_marginBottom="12dp"/>

        <TextView
            android:id="@+id/tvTelefonoAsociacion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Teléfono:"
            android:textSize="18sp"
            android:layout_marginBottom="12dp"/>

        <TextView
            android:id="@+id/tvDireccionAsociacion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dirección:"
            android:textSize="18sp"
            android:layout_marginBottom="32dp"/>

        <!-- Botones -->
        <Button
            android:id="@+id/btnCambiarContrasenaAsociacion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cambiar Contraseña"
            android:textSize="16sp"
            android:layout_marginBottom="16dp" />

        <Button
            android:id="@+id/btnCerrarSesionAsociacion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cerrar Sesión"
            android:textSize="16sp"
            android:layout_marginBottom="24dp" />
    </LinearLayout>
</ScrollView>
